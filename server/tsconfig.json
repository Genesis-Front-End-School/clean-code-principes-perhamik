{
	"compilerOptions": {
		"lib": ["ES6", "DOM"],
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true
	},
	"include": ["*.ts"],
	"exclude": ["node_modules"]
}
